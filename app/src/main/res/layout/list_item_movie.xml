<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
         android:id="@+id/poster_imageview"
         android:layout_width="90dp"
         android:layout_height="140dp"
         android:layout_alignParentStart="true"
         android:layout_centerVertical="true"
         android:layout_marginStart="4dp"
         android:layout_marginTop="6dp"
         android:layout_marginBottom="6dp"
         android:scaleType="fitCenter"
         android:contentDescription="@string/thumbnail"
         app:srcCompat="@mipmap/ic_launcher" />

    <RelativeLayout
        android:id="@+id/movie_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/poster_imageview">
        
        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:text="Title of Movie"
            />
        <TextView
            android:id="@+id/description_text_view"
            android:layout_below="@id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="9sp"
            android:text="description"
            android:maxLines="3"
            />
        <TextView
            android:id="@+id/character_text_view"
            android:layout_below="@id/description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:text="characters"
            />
        <TextView
            android:id="@+id/has_seen_text_view"
            android:layout_below="@id/character_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="11sp"
            android:text="Has seen?"/>
    </RelativeLayout>
</RelativeLayout>